---
import { getLocale } from "astro-i18n-aut";

const locale = getLocale(Astro.url);

interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: "numeric",
			month: "short",
			day: "numeric",
		})
	}
</time>
